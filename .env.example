# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB connection URI
# Format: mongodb://[username:password@]host[:port]/[database][?options]
MONGO_URI=mongodb://admin:password@localhost:27017/champsdb?authSource=admin

# Redis connection URI
# Format: host:port
REDIS_URI=localhost:6379


# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the API server to listen on
PORT=8080


# =============================================================================
# AUTHENTICATION
# =============================================================================

# Host authentication credentials
HOST_USERNAME=admin
HOST_PASSWORD=changeme

# JWT secret for token signing (use a strong random string in production)
JWT_SECRET=your-secret-key-change-this-in-production


# =============================================================================
# AI CONFIGURATION (GEMINI)
# =============================================================================

# Gemini API key for AI features
GEMINI_API_KEY=redacted

# Gemini model for L1 evaluation (per-answer evaluation, needs to be fast)
# Default: gemini-2.5-flash-preview-05-20
GEMINI_MODEL_L1=gemini-2.5-flash-preview-05-20

# Gemini model for follow-up generation (on-demand, needs to be fast)
# Default: gemini-2.5-flash-preview-05-20
GEMINI_MODEL_FOLLOWUP=gemini-2.5-flash-preview-05-20

# Gemini model for L3 refresh (periodic misunderstandings refresh)
# Default: gemini-2.0-flash
GEMINI_MODEL_L3=gemini-2.0-flash

# Gemini model for pool generation (bulk follow-up pool, quality over speed)
# Default: gemini-2.0-flash
GEMINI_MODEL_POOL=gemini-2.0-flash

# Gemini model for scope anchor (building scope from host context)
# Default: gemini-2.0-flash
GEMINI_MODEL_SCOPE=gemini-2.0-flash

# Gemini model for report generation (post-room AI reports, deep analysis)
# Default: gemini-2.0-flash
GEMINI_MODEL_REPORT=gemini-2.0-flash


# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Use * for all origins (not recommended in production)
# Example: http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_ORIGINS=*

# Allowed HTTP methods for CORS (comma-separated)
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers for CORS (comma-separated)
CORS_ALLOWED_HEADERS=Content-Type,Authorization


# =============================================================================
# FRONTEND CONFIGURATION (Next.js)
# =============================================================================

# API base URL for the frontend
# This must be prefixed with NEXT_PUBLIC_ to be accessible in the browser
NEXT_PUBLIC_API_URL=http://localhost:8080
